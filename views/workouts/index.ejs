<html lang="en">
<%- include('../partials/header.ejs') %>
<body>
  <%- include("../partials/nav.ejs") %>
  <div class="workouts content">
    <% if (workouts.length > 0) { %>
      <% workouts.forEach(workout => { %>
        <div class="single-div">
          <a class="single-link" href="/workouts/<%= workout._id %>">
            <h3 class="date"><%= workout.date %></h3>
            <p class="time"><%= workout.time %></p><br>
            <% workout.notes.split(/(\r?\n)|\r/).forEach(line => { %>
              <p class="notes"><%= line %></p>
            <% }) %>
          </a>
        </div>
      <% }) %>
    <% } else { %>
      <p>There are no workouts to display...</p>
    <% } %>
  </div>
  <%- include('../partials/footer.ejs') %>
</body>
</html>